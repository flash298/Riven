{{#each products}}
  <form class="col-sm-6 col-lg-3 mt-4" method="POST" action="/user/cart">
    <div class="card">
      <img
        src="{{this.image}}"
        class="card-img-top"
        alt="{{this.name}}"
        style="height:250px"
      />
      <div class="card-body" style="color: #2e2e2e; height: 200px">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.description}}</p>
        <p class="card-text">{{this.price}}</p>

        <button type="submit" class="btn btn-primary">Thêm giỏ</button>
        <a href="/products/{{this.product_id}}" class="btn btn-primary">Chi tiết</a>
      </div>
    </div>
  </form>
{{/each}}